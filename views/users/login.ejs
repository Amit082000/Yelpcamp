 <% layout('layouts/boilerplate')%>

<link rel="stylesheet" href="/stylesheets/login.css">

 
<div class="container d-flex justify-content-center align-items-center mt-5 ">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="container1 card shadow">
                <img src="https://images.unsplash.com/photo-1532339142463-fd0a8979791a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&w=1287&q=80" 
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <center class="login text-white mb-3" style="font-family: Courier"><font size="+2">  <b>
                        Login </b></font>
                    </center>
                    

                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-2">
                            <label class="form-label text-white" for="username"></label>
                            <input class="form-control" type="text" id="username" name="username" placeholder="Username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-white" for="password"></label>
                            <input class="form-control" type="password" id="password" name="password" placeholder="Password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <center><button class="btn btn-success btn-block">Login</button></center>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 



